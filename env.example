# Environment Variables for NotesApp
# Copy this file to .env.local and fill in your actual values

# Database (will be configured in Module 3)
DATABASE_URL="postgresql://username:password@hostname:port/database"
POSTGRES_URL="postgresql://username:password@hostname:port/database"
POSTGRES_PRISMA_URL="postgresql://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:port/database"

# JWT Secret (will be configured in Module 4)
JWT_SECRET="your-super-secret-jwt-key-here"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-app-domain.vercel.app"
NODE_ENV="production"
